{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "paths": {
      "@api/*": ["cases/api/*"],
      "@scraper/*": ["cases/scraper/*"],
      "@classes/*": ["classes/*"],
      "@config/*": ["config/*"],
      "@entities/*": ["entities/*"],
      "@middlewares/*": ["middlewares/*"],
      "@providers/*": ["providers/implementations/*", "providers/*"],
      "@repositories/*": ["repositories/implementations/*", "repositories/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
